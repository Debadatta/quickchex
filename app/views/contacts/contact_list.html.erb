<h4>Contact List </h4>
<%= text_field 'search', '', :class=> 'form-control'%>
<div class="row">
   <div class="col-md-6" style="height:200px; overflow-y: auto">
      <div id="contact_list">
        <%=render partial: 'contacts' %>
      </div>
   </div>
</div>

<script type="text/javascript">
$(document).ready(function(){

   var search_fun = function(){
      $('#search_').focus();
      $('#search_').keyup(function(){
         
         $.post('/contacts/search.js', {value: $(this).val()}, function(res){

         });

      });
   };


   var keyboard_fun = function() {
      $('input').bind('focus',function() {
        alert($(this).val());
      });
   };


   search_fun();
   keyboard_fun();
});


</script>